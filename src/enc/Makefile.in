# @configure_input@

CC			?= @CC@
CXX 		?= @CXX@
CXXFLAGS	?= @CXXFLAGS@
CPPFLAGS	?= @CPPFLAGS@

STD 		?= c++11

srcdir		= @srcdir@
VPATH		= @srcdir@

caesar.o: caesar.cpp ../../include/enc/caesar.h
	$(CXX) $(CXXFLAGS) $(CPPFLAGS) -c -I. -I$(srcdir) -I.. -std=$(STD) $(srcdir)/caesar.cpp -o ../../caesar.o

vigenere.o: vigenere.cpp ../../include/enc/vigenere.h
	$(CXX) -c -I. -I$(srcdir) -I.. -std=$(STD) $(srcdir)/vigenere.cpp -o ../../vigenere.o
